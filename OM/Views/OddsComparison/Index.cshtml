
@model OM.Models.OMViewModel

@{
    ViewBag.Title = "Odds Comparison Software";
}
<br /><br />
<h2>Real Madrid v Atletico Madrid</h2>
<h3>Sunday 28th May - 19:45</h3>
<br /><br />
<div id="grid"></div>

@section scripts
{
    <script>
        $(document).ready(function () {

            kendo.culture("en-GB");
            $("#grid").kendoGrid({
                columns: [{
                    field: "BetName",
                    title: " "
                }, {
                    field: "Ladbrokes",
                    title: "Ladbrokes",
                    headerTemplate: "<img style='width:100px; height:30px;' src='../Images/ladbrokes.jpg'/>",
                    width: "120px"
                }, {
                    field: "One88Bet",
                    title: "188 Bet",
                    headerTemplate: "<img style='width:100px; height:30px;' src='../Images/188bet.jpg'/>",
                    width: "120px"
                }, {
                    field: "Bet365",
                    title: "Bet 365",
                    headerTemplate: "<img style='width:100px; height:30px;' src='../Images/bet365.jpg'/>",
                    width: "120px"
                }],
                sortable: false,

                filterable: false,
                dataSource: {
                    transport: {
                        read: "/OddsComparison/GetOddsData",
                        dataType: "json"
                        // enable server paging
                    },
                    pageSize: 20,
                    schema: {
                        data: "data", // records are returned in the "data" field of the response
                        total: "total" // total number of records is in the "total" field of the response
                    },
                }
            });
        });
    </script>
}







